@model ProductViewModel


@{
    ViewBag.Title = "create";
}

<h2>create</h2>

@using (Html.BeginForm("Create","Product",new { area="Admin" },FormMethod.Post,new { @class="m-2" , }))
{
    <fieldset >
        <legend class="p-2">Create Product</legend>
        <div class="m-2">
            @Html.LabelFor(i => i.Name ,new { @class="form-label" })
            @Html.TextBoxFor(i => i.Name, new {@class = "form-control"})
        </div>
        <div class="m-2">
            @Html.LabelFor(i => i.Description ,new { @class="form-label" })
            @Html.TextBoxFor(i => i.Description, new {@class = "form-control"})
        </div>
        <div class="m-2">
            @Html.LabelFor(i => i.Price ,new { @class="form-label" })
            @Html.TextBoxFor(i => i.Price, new {@class = "form-control"})
        </div>
        <div class="m-2">
            <input type="submit" class="btn btn-primary" />
        </div>
    </fieldset>

}
